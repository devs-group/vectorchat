{
  "$id": "https://vectorchat.dev/schemas/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VectorChat Identity",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "avatar_url": {
          "type": ["string", "null"],
          "format": "uri"
        },
        "github_id": {
          "type": ["string", "null"],
          "pattern": "^[0-9]+$"
        }
      },
      "required": ["email"],
      "additionalProperties": true
    }
  }
}
