# General project rules.
# Defines the overall structure and main technologies.
structure:
  - name: "Go Backend"
    path: "."
    language: "go"
    rules:
      - "cmd/**/*.go"
      - "internal/**/*.go"
      - "pkg/**/*.go"
      - "go.mod"
      - "go.sum"

  - name: "Nuxt.js Frontend"
    path: "frontend"
    language: "typescript"
    framework: "nuxt"
    rules:
      - "app.vue"
      - "nuxt.config.ts"
      - "components/**/*.vue"
      - "composables/**/*.ts"
      - "pages/**/*.vue"
      - "server/**/*.ts"
      - "package.json"

# General ignore rules for the entire project.
# Excludes common directories and files that are not useful for context.
ignore:
  - "**/.git"
  - "**/node_modules"
  - "**/.nuxt"
  - "**/.output"
  - "**/dist"
  - "**/.gocache"
  - "**/tmp"
  - "**/uploads"
  - "**/pgadmin4"
  - "**/*.lock"